{
  "name": "flux-compiler",
  "version": "2.0.14",
  "description": "A next-generation web programming language for ultra-fast rendering with advanced features",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "flux": "./bin/flux.js"
  },
  "scripts": {
    "build": "node build.js",
    "build:ts": "tsc",
    "dev": "node --watch src/cli/dev-server.js",
    "test": "node test/run-tests.js",
    "test:advanced": "node src/test/advanced-test-runner.js",
    "test:ts": "tsc --noEmit",
    "cli": "node src/cli/advanced-cli.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "start": "node src/cli/advanced-cli.js dev",
    "new": "node src/cli/advanced-cli.js new",
    "profile": "node src/cli/advanced-cli.js profile",
    "debug": "node src/cli/advanced-cli.js debug",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "programming-language",
    "compiler",
    "web-framework",
    "reactive",
    "webassembly",
    "jsx",
    "virtual-dom",
    "performance",
    "testing",
    "cli"
  ],
  "author": "Flux Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "events": "^3.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flux-lang/flux.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/flux-lang/flux/issues"
  },
  "homepage": "https://flux-lang.dev"
}
