# Flux Application Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost
PROTOCOL=http

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flux_app_dev
DB_USER=flux_user
DB_PASSWORD=flux_password
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=5

# Redis Configuration
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=flux:

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=storage
STORAGE_MAX_FILE_SIZE=52428800

# S3 Storage (if using S3)
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=

# Google Cloud Storage (if using GCS)
GCS_BUCKET=your-gcs-bucket
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILENAME=path/to/service-account-key.json

# Azure Blob Storage (if using Azure)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=your-container-name

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=flux-app
JWT_AUDIENCE=flux-users
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
BCRYPT_ROUNDS=12

# Email Configuration
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_NAME=Flux App
EMAIL_FROM_EMAIL=noreply@fluxapp.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Monitoring
MONITORING_ENABLED=false
METRICS_PORT=9090
TRACING_ENABLED=false
JAEGER_HOST=localhost
JAEGER_PORT=6832

# Queue Configuration
QUEUE_ENABLED=false
QUEUE_TYPE=bull
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Frontend Configuration
FRONTEND_BUILD_DIR=dist
FRONTEND_PUBLIC_PATH=/
FRONTEND_DEV_PORT=3001

# Testing Configuration
TESTING_ENABLED=true
TESTING_FRAMEWORK=jest
TESTING_COVERAGE_ENABLED=true
TESTING_PARALLEL=true
TESTING_MAX_WORKERS=4

# Cookie Configuration (for production)
COOKIE_DOMAIN=localhost

# Health Check Endpoints
HEALTH_ENDPOINT=/health
HEALTH_DATABASE_ENDPOINT=/health/database
HEALTH_STORAGE_ENDPOINT=/health/storage